{% extends 'AspirinaBundle::layout.html.twig' %}

{% block content -%}
    <div class="page-header">
        <h1>Subject</h1>
    </div>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Initial</th>
                <td>{{ entity.initial }}</td>
            </tr>
        </tbody>
    </table>

    <form action="{{ path('subject_delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit" class="btn btn-danger pull-right">Delete</button>
    </form>

    <div class="btn-group">
        <a href="{{ path('subject') }}" class="btn">
            Back to the list
        </a>
        <a href="{{ path('subject_edit', { 'id': entity.id }) }}" class="btn btn-primary">
            Edit
        </a>
    </div>
{% endblock %}
