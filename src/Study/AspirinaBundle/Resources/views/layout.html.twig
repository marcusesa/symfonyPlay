<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta charset="utf-8">
        <title>{% block title %}Study Aspirina{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        
        {% stylesheets 
            'bundles/aspirina/css/*' 
            'bundles/aspirina/bootstrap/bootstrap.min.css'
            filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
            
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block navbartop %}
            <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container-fluid">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <a class="brand" href="{{ path('dashboard') }}">Aspirina</a>
                        <div class="btn-group pull-right">
                            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="icon-user"></i> {{ app.user.username }}
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Profile</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('logout') }}">Sign Out</a></li>
                            </ul>
                        </div>
                        <div class="pull-right item-navbar">
                            <i class="icon-time icon-white"></i>
                            <span id="date-now">Loading...</span>
                        </div>
                        <div class="nav-collapse">
                            <ul class="nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        System
                                        <b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li><a href="{{ path('visit') }}" >Visits</a></li>
                                            <li><a href="{{ path('section') }}">Sections</a></li>
                                        </ul>
                                </li>
                                <li>
                                    <a href="#">CRF</a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Management <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('site') }}">Site</a></li>
                                        <li><a href="{{ path('subject') }}">Subject</a></li>
                                        <li class="divider"></li>
                                        <li><a href="{{ path('user') }}">User</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Clean <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('dcf') }}">DCF</a></li>
                                        <li><a href="#">Query</a></li>
                                    </ul>
                                </li>
                                <li><a href="#">Trail</a></li>
                                <li><a href="#">Export</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
            
        <div class="container-fluid" id="content-master">
            {% block content %}{% endblock %}
        </div>
        
        {% block navbarbottom %}
            <div class="navbar navbar-fixed-bottom">
                <div class="navbar-inner">
                    <div class="container-fluid">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <div class="btn-group pull-right">
                            <a id="subject-selected" class="btn dropdown-toggle" data-toggle="modal" data-target="#modal-large" href="{{ path('subject_list') }}" data-ajax-load-html="#modal-large">Selected Subject</a>
                        </div>
                        <div class="nav-collapse">
                            <ul class="nav">
                                 <li><a href="#" class="subject-selected-item">Initials: REP</a></li>
                                <li><a href="#" class="subject-selected-item">Site number: 654 / Hospital das Cl√≠nicas</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
            
        <div class="modal hide fade" id="modal-normal"></div>
        <div class="modal hide fade" id="modal-large"></div>
        
        {% javascripts
            '@AspirinaBundle/Resources/public/js/lib/jquery.js'
            '@AspirinaBundle/Resources/public/js/plugin/jquery-ui-1.8.21.custom.min.js'
            '@AspirinaBundle/Resources/public/js/plugin/bootstrap.min.js'
            '@AspirinaBundle/Resources/public/js/plugin/idletimer.js'
            '@AspirinaBundle/Resources/public/js/plugin/idletimeout.js'
            '@AspirinaBundle/Resources/public/js/*' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </body>
</html>
