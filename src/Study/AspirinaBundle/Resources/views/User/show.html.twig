{% extends 'AspirinaBundle::layout.html.twig' %}

{% block content -%}
    <div class="page-header">
        <h1>User</h1>
    </div>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ entity.active }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
        </tbody>
    </table>

    <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit" class="btn btn-danger pull-right">Delete</button>
    </form>

    <div class="btn-group">
        <a href="{{ path('user') }}" class="btn">
            Back to the list
        </a>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-primary">
            Edit
        </a>
    </div>
{% endblock %}
