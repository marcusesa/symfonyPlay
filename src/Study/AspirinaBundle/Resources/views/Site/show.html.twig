{% extends 'AspirinaBundle::layout.html.twig' %}

{% block content -%}
    <div class="page-header">
        <h1>Site</h1>
    </div>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ entity.number }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Investigator</th>
                <td>{{ entity.investigator }}</td>
            </tr>
        </tbody>
    </table>

    <form action="{{ path('site_delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit" class="btn btn-danger pull-right">Delete</button>
    </form>

    <div class="btn-group">
        <a href="{{ path('site') }}" class="btn">Back to the list</a>
        <a href="{{ path('site_edit', { 'id': entity.id }) }}" class="btn btn-primary">Edit</a>
    </div>

{% endblock %}
