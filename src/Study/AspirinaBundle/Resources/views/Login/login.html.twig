{% extends 'AspirinaBundle::layout.html.twig' %}

{% block navbartop %}{% endblock %}
{% block navbarbottom %}{% endblock %}

{% block content %}

<div class="container">
	<div class="row">
            <div class="span4 offset4 well">
                <legend>Please Sign In</legend>
                {% if error %}
                    <div class="alert alert-error">
                        <a class="close" data-dismiss="alert" href="#">Ã—</a>{{ error.message }}
                    </div>
                {% endif %}

                <form action="{{ path('login_check') }}" method="post">
                    <input type="text" id="username" class="span4" name="_username" value="{{ last_username }}" placeholder="Username">
                    <input type="password" id="password" class="span4" name="_password" placeholder="Password">
                    {# If you want to control the URL the user is redirected to on success (more details below)
                        <input type="hidden" name="_target_path" value="/account" />
                    #}
                    <button type="submit" name="submit" class="btn btn-success btn-block">Sign in</button>
                </form>    
            </div>
	</div>
</div>
{% endblock %}
